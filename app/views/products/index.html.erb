<h1>Product</h1>

<div id="products" data-products="<%= render(template: "products/index.json.rabl") %>">
<% @products.each do |product| %>

	<tr>
	<% if product.user == current_user %>
	<div class="large-4">
		<td><%= product.Name %></td>
	</div>
	<div class="large-4">
		<td><%= image_tag product.image.url(:thumb) %></td>
	</div>

	<% end %>
	</tr>

	<% end %>
<br>
<br>
<a class="success button" href="products/new">New Product</a>

