<h1>Product</h1>

<%= form_for @product, html: { multipart: true } do |f| %>
<div class="large-4">
	<%= f.label :Name %>
	<%= f.text_field :Name %>
</div>
<div class="large-4">
	<%= f.label :Mobile_no  %>
	<%= f.text_field :Mobile_no %>
</div>

<div class="large-4">
	<%= f.label :Address %>
	<%= f.text_field :Address %>
</div>

<div class="large-4">
	<%= f.label :Upload_Your_Image %><br>
	<%= f.file_field :image %>
</div>

<p>
	<%= f.submit :class => 'success button' %>
</p>

	
<% end %>